@model WebApplication1.Models.UsuarioModel
@{
    ViewBag.Title = "Auntentificación";
}

<div id="login">
    <h1 class="page-header text-center">Auntentificación en el sistema</h1>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">Acceso al sistema</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Autentificar", "Default", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()

                        <p class="alert alert-info text-center">
                            Escriba cualquier cosa y luego ingresar, no estamos validando estos campos.
                        </p>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Email)
                            @Html.EditorFor(u => u.Email,null, new { HtmlAttributes = new { @class = "form-control", placeholder = "Ingrese su correo electrónico" } })
                            @Html.ValidationMessageFor(u => u.Email, null, new { @class = "alert alert-error"})                           
                            
                         </div>
                        <div class="form-group">
                           @Html.LabelFor(u => u.Password)
                           @Html.EditorFor(u => u.Password, null, new { HtmlAttributes = new { @class = "form-control", placeholder = "Ingrese su password" } })
                           @Html.ValidationMessageFor(u => u.Password, null, new { @class = "alert alert-error"})
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">
                                Ingresar
                            </button>
                        </div>
                    }
                    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
                    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>    
                    <script src="~/Scripts/jquery.form.js"></script>  
                </div>
            </div>
        </div>
    </div>
</div>
